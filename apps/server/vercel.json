{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "prisma generate && prisma migrate deploy && tsc"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "src/index.ts" },
    { "src": "/(.*)", "dest": "src/index.ts" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
