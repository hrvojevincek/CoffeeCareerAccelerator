  "scripts": {
    "tsc": "tsc",
    "predev": "echo 'üöÄ Starting development server...' && echo 'üì° Auto-detecting database environment...'",
    "dev": "./start-dev.sh",
    "dev:local": "echo 'üê≥ Using Local Docker PostgreSQL...' && cd .. && docker-compose up -d && cd apps/server && npx prisma generate && nodemon ./src/index.ts",
    "dev:neon": "echo '‚òÅÔ∏è  Using Neon Cloud PostgreSQL...' && FORCE_NEON=true npx prisma generate && nodemon ./src/index.ts",
    "dev:docker": "echo 'üê≥ Using Local Docker PostgreSQL...' && DOCKER_ENV=true npx prisma generate && nodemon ./src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "seed": "prisma db seed",
    "seed:local": "DOCKER_ENV=true prisma db seed",
    "seed:neon": "FORCE_NEON=true prisma db seed",
    "docker:stop": "echo 'üõë Stopping Docker PostgreSQL...' && cd .. && docker-compose down",
    "docker:restart": "echo 'üîÑ Restarting Docker PostgreSQL...' && cd .. && docker-compose restart",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "format": "prettier --write \"src/**/*.{js,ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json}\""
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ],
    "rules": {
      "@typescript-eslint/no-misused-promises": 0,
      "@typescript-eslint/strict-boolean-expressions": 0
    }
  }
}
